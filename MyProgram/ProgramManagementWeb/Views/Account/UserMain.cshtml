@{
    ViewBag.Title = "UserMain";
    Layout = "~/Views/Shared/_easyui.cshtml";
}

<body style="padding-bottom:0px; padding-left:5px;padding-right:5px;padding-top:5px">
    <table id="dg" title=" " class="easyui-datagrid" style="width: 700px; height: 600px"
           url="/Account/UsersReadUsersSelect"
           toolbar="#toolbar"
           pagination="true"
           pagesize="20"
           rownumbers="true"
           fitcolumns="true"
           singleselect="true" fit="true"
           data-options="width:'auto'

           ">
        <thead>
            <tr>
                <th data-options=" field:'ID',width:14" rowspan="2">ID</th>
                <th data-options="field:'USERNAME',width:30" rowspan="2">登录名</th>
                <th colspan="9">详细资料</th>
            </tr>
            <tr>
                <th data-options="field:'NICKNAME',width:50,align:'right'">昵称</th>
                <th data-options="field:'EMAIL',width:15,align:'right'">邮箱</th>
                <th data-options="field:'CELLPHONE',width:8,align:'right'">手机</th>
                <th data-options="field:'CREATED_ON',width:50,align:'right'">创建时间</th>
                <th data-options="field:'CREATED_BY',width:38,align:'right'">创建人</th>
            </tr>
        </thead>
    </table>
    <div id="toolbar">
        
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="newUser()">添加</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" plain="true" onclick="editUser()">修改</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-remove" plain="true" onclick="destroyUser()">删除</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search" plain="true" onclick="destroyUser()">查询</a>
    </div>


    <div id="dlg" class="easyui-dialog" style="width:400px;height:400px;padding:10px 20px"
         closed="true" buttons="#dlg-buttons"
         modal="true">
        <div class="ftitle">用户信息</div>
        <form id="fm" method="post" novalidate>

            <div class="fitem">
                <label>登录名:</label>
                <input id="UserName" name="UserName" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>密码:</label>
                <input name="UserPWD" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>确认密码:</label>
                <input name="UserPWDsure" class="easyui-validatebox" required="true">
            </div>
            <div class="fitem">
                <label>邮箱:</label>
                <input name="UserEmail" class="easyui-validatebox" required="true" validtype="email">
            </div>
            <div class="fitem">
                <label>昵称:</label>
                <input name="NickName" class="easyui-validatebox" required="true">
            </div>
            
            <div class="fitem">
                <label>电话:</label>
                <input name="UserPhonenumber" class="easyui-validatebox" required="true">
            </div>

        </form>
    </div>
    <div id="dlg-buttons">
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" onclick="saveUser()">添加</a>
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">关闭</a>
    </div>
    <script type="text/javascript" src="@Url.Content("~/Content/LADScript/UserMain.js")"></script>
    <style type="text/css">
        #fm {
            margin: 0;
            padding: 10px 30px;
        }

        .ftitle {
            font-size: 14px;
            font-weight: bold;
            padding: 5px 0;
            margin-bottom: 10px;
            border-bottom: 1px solid #ccc;
        }

        .fitem {
            margin-bottom: 5px;
        }

            .fitem label {
                display: inline-block;
                width: 80px;
            }
    </style>
</body>
